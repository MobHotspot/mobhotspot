 #!/bin/bash
rootpwres=$( zenity --title="Root-Password"  --text='Please enter root password' --hide-text="" --entry )
rootpwold1=$(grep rootpwmain= /home/tejesh/test/opt/mobhotspot/connection/refresh.ihs)
rootpwold2=$(grep rootpwmain= /home/tejesh/test/opt/mobhotspot/connection/start.ihs)
rootpwold3=$(grep rootpwmain= /home/tejesh/test/opt/mobhotspot/connection/stop.ihs)
rootpwold4=$(grep rootpwmain= /home/tejesh/test/opt/mobhotspot/settings/changewifi.ihs)
rootpwnew="rootpwmain='"$rootpwres"'"
DPATH1=" /home/tejesh/test/opt/mobhotspot/connection/refresh.ihs"
DPATH2=" /home/tejesh/test/opt/mobhotspot/connection/start.ihs"
DPATH3=" /home/tejesh/test/opt/mobhotspot/connection/stop.ihs"
BPATH=" /home/tejesh/test/opt/mobhotspot/backup"
TFILE="/tmp/out.tmp.$$"
TFILE="/tmp/out.tmp.$$"
	[ ! -d $BPATH ] && mkdir -p $BPATH || :
	for f in $DPATH1
	do
	if [ -f $f -a -r $f ]; then
	 /bin/cp -f $f $BPATH
	   sed "s/$rootpwold1/$rootpwnew/g" "$f" > $TFILE && mv $TFILE "$f"
	else
	  echo "Error: Cannot read $f"
	 fi 
	done
	[ ! -d $BPATH ] && mkdir -p $BPATH || :
	for f in $DPATH2
	do
	if [ -f $f -a -r $f ]; then
	 /bin/cp -f $f $BPATH
	   sed "s/$rootpwold2/$rootpwnew/g" "$f" > $TFILE && mv $TFILE "$f"
	else
	  echo "Error: Cannot read $f"
	 fi 
	done
	[ ! -d $BPATH ] && mkdir -p $BPATH || :
	for f in $DPATH3
	do
	if [ -f $f -a -r $f ]; then
	 /bin/cp -f $f $BPATH
	   sed "s/$rootpwold3/$rootpwnew/g" "$f" > $TFILE && mv $TFILE "$f"
	else
	  echo "Error: Cannot read $f"
	 fi 
	done
	chmod +x $DPATH1 $DPATH2 $DPATH3
zenity --info --title="Changes successful" --text="changes successful. "
    killall Wiconnect-Ubuntu
	wiconnect
